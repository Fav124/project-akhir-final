<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Data Sakit"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#0F2319"/>
        </LinearLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle_primary_20"
                    android:layout_marginEnd="12dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Sakit Baru"
                        android:textStyle="bold"
                        android:textColor="#0F2319"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi formulir untuk mencatat data sakit santri"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Santri Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Santri"
                android:textStyle="bold"
                android:textColor="#0F2319"
                android:layout_marginBottom="8dp"/>
            
            <Spinner
                android:id="@+id/spSantri"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Tanggal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Mulai Sakit"
                android:textStyle="bold"
                android:textColor="#0F2319"
                android:layout_marginBottom="8dp"/>
            
            <EditText
                android:id="@+id/etTanggal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="YYYY-MM-DD"
                android:inputType="date"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Diagnosis -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diagnosis"
                android:textStyle="bold"
                android:textColor="#0F2319"
                android:layout_marginBottom="8dp"/>
            
            <EditText
                android:id="@+id/etDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="Contoh: Demam, Flu"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Gejala -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gejala"
                android:textStyle="bold"
                android:textColor="#0F2319"
                android:layout_marginBottom="8dp"/>
            
            <EditText
                android:id="@+id/etGejala"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_input"
                android:hint="Jelaskan gejala yang dialami"
                android:gravity="top"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"/>

            <!-- Tindakan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tindakan"
                android:textStyle="bold"
                android:textColor="#0F2319"
                android:layout_marginBottom="8dp"/>
            
            <EditText
                android:id="@+id/etTindakan"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_input"
                android:hint="Tindakan yang dilakukan"
                android:gravity="top"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="16dp"/>

            <!-- Tingkat Kondisi -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tingkat Kondisi"
                android:textStyle="bold"
                android:textColor="#0F2319"
                android:layout_marginBottom="8dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:id="@+id/btnRingan"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Ringan"
                    android:gravity="center"
                    android:background="@drawable/bg_chip_active"
                    android:textColor="#0F2319"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btnSedang"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Sedang"
                    android:gravity="center"
                    android:background="@drawable/bg_chip"
                    android:textColor="#6B7280"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btnBerat"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Berat"
                    android:gravity="center"
                    android:background="@drawable/bg_chip"
                    android:textColor="#6B7280"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Submit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Batal"
                android:background="@drawable/bg_chip"
                android:textColor="#6B7280"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Simpan"
                android:background="@drawable/bg_chip_active"
                android:textColor="#0F2319"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

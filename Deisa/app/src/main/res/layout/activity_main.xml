<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F8F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMIN DASHBOARD"
                android:textSize="12sp"
                android:textColor="#06F980"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santri Health"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0F2319"/>
        </LinearLayout>

        <!-- Stats Horizontal Scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:clipToPadding="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Stat 1 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="128dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_red_10"
                        android:layout_marginBottom="8dp"/> <!-- Icon Placeholder -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#0F2319"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sick Santri Today"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <!-- Stat 2 -->
                 <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="128dp"
                    android:background="@drawable/bg_card"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_circle_orange_10"
                        android:layout_marginBottom="8dp"/> 

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#0F2319"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low Stock Items"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Menu Grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Management"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0F2319"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Card 1: Sick Records -->
            <LinearLayout
                android:id="@+id/btnSickRecords"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_gray"
                    android:layout_marginBottom="12dp">
                    <!-- Icon -->
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="+" android:layout_gravity="center"/>
                </FrameLayout>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sick Records"
                    android:textStyle="bold"
                    android:textColor="#0F2319"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Logs"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <!-- Card 2: Medicine -->
            <LinearLayout
                android:id="@+id/btnMedicine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp">

                 <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_gray"
                    android:layout_marginBottom="12dp">
                     <!-- Icon -->
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rx" android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medicine"
                    android:textStyle="bold"
                    android:textColor="#0F2319"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <!-- Card 3: Santri -->
            <LinearLayout
                android:id="@+id/btnSantri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_gray"
                    android:layout_marginBottom="12dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ‘¤" android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Santri"
                    android:textStyle="bold"
                    android:textColor="#0F2319"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

            <!-- Card 4: Reports -->
            <LinearLayout
                android:id="@+id/btnReports"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_circle_gray"
                    android:layout_marginBottom="12dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ðŸ“Š" android:layout_gravity="center"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:textStyle="bold"
                    android:textColor="#0F2319"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textSize="12sp"
                    android:textColor="#6B7280"/>
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</ScrollView>
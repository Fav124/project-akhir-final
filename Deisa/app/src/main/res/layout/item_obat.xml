<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card"
    android:padding="12dp"
    android:layout_marginBottom="16dp"
    android:gravity="center_vertical">

    <!-- Obat Image/Icon -->
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp">
        
        <ImageView
            android:id="@+id/ivObat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_circle_primary_20"
            android:scaleType="centerCrop"/>

        <!-- Expiring Badge -->
        <TextView
            android:id="@+id/tvExpBadge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#EF4444"
            android:text="EXP 2 HARI"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="2dp"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvObatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Obat Name"
            android:textStyle="bold"
            android:textColor="#0F2319"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvObatDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori â€¢ Satuan"
            android:textColor="#6B7280"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 Strip"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#0F2319"
                android:background="#F9FAFB"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"/>

            <TextView
                android:id="@+id/tvExpDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp: 2025"
                android:textSize="10sp"
                android:textColor="#15803D"
                android:background="@drawable/bg_status_sehat"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
